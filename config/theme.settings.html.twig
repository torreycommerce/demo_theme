{% import "/_macros/utils.html.twig" as utils %}
<div class="row">
	<div class="col-md-12">
		<div class="panel-group" id="accordion">
			{# Begin branding #}
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#collapseBranding">Branding</a></h3>
				</div>
				<div id="collapseBranding" class="panel-collapse collapse">

					<div class="panel-body">
						{# Begin logo & background #}
						<h4>Logo & Background</h4>
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<label for="logo-custom" class="col-sm-3 control-label">Use a custom logo?</label>
								<div class="col-sm-9">
									<input type="checkbox" id="logo-custom" name="logo-custom" {{ utils.checkBoxValue(settings.current.branding.logo_backgroung.custom_logo) }}>
								</div>
							</div>
							<div class="form-group">
								<label for="logo-custom-upload" class="col-sm-3 control-label">Shop Logo (should be less than 700 pixels wide)</label>
								<div class="col-sm-9">
									<input type="file" id="logo-custom-upload" name="logo" data-max-width="700" data-max-height="600" data-bind="">
									<p><i class="fa fa-paperclip"></i> <a target="_blank" href="#">logo.png</a></p>
								</div>								
							</div>
							<div class="form-group">
								<label for="logo-custom-center" class="col-sm-3 control-label">Center logo (when main navigation is below)?</label>
								<div class="col-sm-9">
									<input type="checkbox" id="logo-custom-center" name="logo-center" value="1">
								</div>
							</div>
							<div class="form-group">
								<label for="favicon-image" class="col-sm-3 control-label">Use a favicon image?</label>
								<div class="col-sm-9">
									<input type="checkbox" id="favicon-image" name="favicon-image" value="1">
								</div>
							</div>
							<div class="form-group">
								<label for="favicon-upload" class="col-sm-3 control-label">Upload a favicon (must be 16px x 16px)</label>
								<div class="col-sm-9">
									<input type="file" id="favicon-upload" name="favicon-upload" data-max-width="16" data-max-height="16" data-bind="favicon.png">
									<p><i class="fa fa-paperclip"></i> <a target="_blank" href="#">favicon.png</a></p>
								</div>
							</div>
							<div class="form-group">
								<label for="site-bg-image" class="col-sm-3 control-label">Use a background image?</label>
								<div class="col-sm-9">
									<select id="site-bg-image" name="site-bg-image">
										<option value="">No background image</option>
										<option value="custom">Use custom image (see upload button below)</option>
										<option value="style1">Use background image of style 1</option>
										<option value="style2">Use background image of style 2</option>
									</select>
								</div>
							</div>
							<div class="form-group">
								<label for="site-bg-image-custom" class="col-sm-3 control-label">Custom background image</label>
								<div class="col-sm-9">
									<input type="file" id="site-bg-image-custom" name="site-bg-image-custom" data-bind="site-bg-image-custom.png">
								</div>
							</div>
							<div class="form-group">
								<label for="site-bg-image-display" class="col-sm-3 control-label">Background image display style</label>
								<div class="col-sm-9">
									<input type="radio" name="site-bg-image-display" value="tiled"> Tiled
									<input type="radio" name="site-bg-image-display" value="full"> Not tiled
									<input type="radio" name="site-bg-image-display" value="stretch"> Stretch
								</div>
							</div>
						</form>
						{# End logo & background #}
						{# Begin toolbar #}
						<h4>Toolbar</h4>
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<label for="toolbar-bg-color" class="col-sm-3 control-label">Toolbar background color</label>
								<div class="col-sm-9">
									<input id="toolbar-bg-color" name="toolbar-bg-color" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="toolbar-bg-color-none" class="col-sm-3 control-label">Remove background color</label>
								<div class="col-sm-9">
									<input type="checkbox" value="1" name="toolbar-bg-color-none" id="toolbar-bg-color-none">
								</div>
							</div>
							<div class="form-group">
								<label for="toolbar-text-color" class="col-sm-3 control-label">Toolbar text color</label>
								<div class="col-sm-9">
									<input id="toolbar-text-color" name="toolbar-text-color" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="toolbar-text-color-hover" class="col-sm-3 control-label">Toolbar text hover color</label>
								<div class="col-sm-9">
									<input id="toolbar-text-color-hover" name="toolbar-text-color-hover" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="toolbar-border-style" class="col-sm-3 control-label">Show toobar bottom border?</label>
								<div class="col-sm-9">
									<input type="radio" name="toolbar-border-style" value="none"> None
									<input type="radio" name="toolbar-border-style" value="regular_width"> Regular width
									<input type="radio" name="toolbar-border-style" value="full_width"> Full width
								</div>
							</div>
							<div class="form-group">
								<label for="toolbar-border-color" class="col-sm-3 control-label">Toolbar border color</label>
								<div class="col-sm-9">
									<input id="toolbar-border-color" name="toolbar-border-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="toolbar-border-search" class="col-sm-3 control-label">Show border around search?</label>
								<div class="col-sm-9">
									<input type="checkbox" value="1" name="toolbar-border-search">
								</div>
							</div>
							<div class="form-group">
								<label for="search-border-color" class="col-sm-3 control-label">Search border color</label>
								<div class="col-sm-9">
									<input id="search-border-color" name="search-border-color" class="" value="#000000" size="7">
								</div>
							</div>
						</form>
						{# End toolbar #}
						{# Begin footer colors #}
						<h4>Footer Colors</h4>
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<label for="footer-background-color" class="col-sm-3 control-label">Footer background color</label>
								<div class="col-sm-9">
									<input id="footer-background-color" name="footer-background-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="footer-bg-color-remove" class="col-sm-3 control-label">Remove footer color</label>
								<div class="col-sm-9">
									<input type="checkbox" value="1" name="footer-bg-color-remove" id="footer-bg-color-remove">
								</div>
							</div>
							<div class="form-group">
								<label for="footer-text-color" class="col-sm-3 control-label">Footer text color</label>
								<div class="col-sm-9">
									<input id="footer-text-color" name="footer-text-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="footer-heading-color" class="col-sm-3 control-label">Footer heading color</label>
								<div class="col-sm-9">
									<input id="footer-heading-color" name="footer-heading-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="footer-heading-underline" class="col-sm-3 control-label">Show footer heading underline?</label>
								<div class="col-sm-9">
									<input type="checkbox" value="1" name="footer-heading-underline" id="footer-heading-underline">
								</div>
							</div>
							<div class="form-group">
								<label for="footer-heading-underline-color" class="col-sm-3 control-label">Footer heading underline color</label>
								<div class="col-sm-9">
									<input id="footer-heading-underline-color" name="footer-heading-underline-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="footer-link-color" class="col-sm-3 control-label">Footer link color</label>
								<div class="col-sm-9">
									<input id="footer-link-color" name="footer-link-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="footer-link-color-hover" class="col-sm-3 control-label">Footer link hover color</label>
								<div class="col-sm-9">
									<input id="footer-link-color-hover" name="footer-link-color-hover" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="footer-border-style" class="col-sm-3 control-label">Show footer bottom border?</label>
								<div class="col-sm-9">
									<input type="radio" name="footer-border-style" value="none"> None
									<input type="radio" name="footer-border-style" value="regular_width"> Regular width
									<input type="radio" name="footer-border-style" value="full_width"> Full width
								</div>
							</div>
							<div class="form-group">
								<label for="footer-border-color" class="col-sm-3 control-label">Footer border color</label>
								<div class="col-sm-9">
									<input id="footer-border-color" name="footer-border-color" class="" value="#000000" size="7">
								</div>
							</div>
						</form>
						{# End footer colors #}
						{# Begin content area #}
						<h4>Content Area Color</h4>
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<label for="site-background-color" class="col-sm-3 control-label">Site background color</label>
								<div class="col-sm-9">
									<input id="site-border-color" name="site-border-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="content-background-color" class="col-sm-3 control-label">Content area background color</label>
								<div class="col-sm-9">
									<input id="content-border-color" name="content-border-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="content-background-transparent" class="col-sm-3 control-label">No content area background color</label>
								<div class="col-sm-9">
									<input type="checkbox" value="1" name="content-background-transparent" id="content-background-transparent">
								</div>
							</div>

							<div class="form-group">
								<label for="text-color" class="col-sm-3 control-label">Text color</label>
								<div class="col-sm-9">
									<input id="text-color" name="text-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="heading-color" class="col-sm-3 control-label">Heading color</label>
								<div class="col-sm-9">
									<input id="heading-color" name="heading-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="link-color" class="col-sm-3 control-label">Link color</label>
								<div class="col-sm-9">
									<input id="link-color" name="link-color" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="link-color-hover" class="col-sm-3 control-label">Link hover color</label>
								<div class="col-sm-9">
									<input id="link-color-hover" name="link-color-hover" class="" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label for="price-color" class="col-sm-3 control-label">Price color</label>
								<div class="col-sm-9">
									<input id="price-color" name="price-color" class="" value="#000000" size="7">
								</div>
							</div>
						</form>
						{# End content area #}
						{# Begin buttons #}						
						<h4>Buttons</h4>
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<lable class="col-sm-3 control-label" for="btn-bg-color">
									Button background color
								</lable>
								<div class="col-sm-9">
									<input id="btn-bg-color" class="" name="btn-bg-color" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<lable class="col-sm-3 control-label" for="btn-bg-color-hover">
									Button background color hover
								</lable>
								<div class="col-sm-9">
									<input id="btn-bg-color-hover" class="" name="btn-bg-color-hover" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<lable class="col-sm-3 control-label" for="btn-text-color">
									Button text color
								</lable>
								<div class="col-sm-9">
									<input id="btn-text-color" class="" name="btn-text-color" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<lable class="col-sm-3 control-label" for="btn-text-color-hover">
									Button text color hover
								</lable>
								<div class="col-sm-9">
									<input id="btn-text-color-hover" class="" name="btn-text-color-hover" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<lable class="col-sm-3 control-label" for="btn-border-radius">
									Button border radius
								</lable>
								<div class="col-sm-9">
									<select name="btn-border-radius" id="btn-border-radius">
										<option value="15px">15px</option>
										<option value="10px">10px</option>
										<option value="7px">7px</option>
										<option value="5px">5px</option>
										<option value="4px">4px</option>
										<option value="3px">3px</option>
										<option value="2px">2px</option>
										<option value="none" selected="selected">None</option>
									</select>
								</div>
							</div>
						</form>
						{# End buttons #}
						{# Begin borders #}
						<h4>Borders</h4>
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<label class="col-sm-3 control-label" for="general-border-style">General border style</label>
								<div class="col-sm-9">
									<select id="general-border-style" name="general-border-style">
										<option value="solid" selected="selected">Solid</option>
										<option value="dashed">Dashed</option>
										<option value="dotted">Dotted</option>
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-3" for="gernal-border-color">General border color</label>
								<div class="col-sm-9">
									<input id="gernal-border-color" name="gernal-border-color" value="#000000" size="7">
								</div>									
							</div>
						</form>
						{# End borders #}
						{# Begin tabs #}
						<h4>Tabs</h4>
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<label class="control-label col-sm-3" for="tab-bg-color">Tab background color</label>
								<div class="col-sm-9">
									<input id="tab-bg-color" name="tab-bg-color" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-3" for="tab-bg-color-none">No tab background color</label>
								<div class="col-sm-9">
									<input type="checkbox" id="tab-bg-color-none" name="tab-bg-color-none" value="">
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-3" for="tab-active-bg-color">Tab active background color</label>
								<div class="col-sm-9">
									<input id="tab-active-bg-color" name="tab-active-bg-color" value="#000000" size="7">
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-3" for="tab-active-bg-color-none">No tab active background color</label>
								<div class="col-sm-9">
									<input type="checkbox" id="tab-active-bg-color-none" name="tab-active-bg-color-none" value="">
								</div>
							</div>
						</form>
						{# End tabs #}
					</div>
				</div>
			</div>
			{# End branding #}
			{# Begin typography #}
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">
						<a data-toggle="collapse" data-parent="#accordion" href="#collapseTypography">
							Typography
						</a>
					</h3>
				</div>
				<div id="collapseTypography" class="panel-collapse collapse">
					<div class="panel-body">
						{# Begin base styles #}
						<h4>Base Styles</h4>
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<label for="base-typeface" class="col-sm-3 control-label">Base typeface</label>
								<div class="col-sm-9">
									<select class="font" name="" id="base-typeface">
										<option value="Helvetica, Arial, 'Lucida Grande', sans-serif">Lucida Grande</option>
										<optgroup label="Sans-serif">
											<option value="Helvetica, Arial, sans-serif" selected="">Helvetica/Arial</option>
											<option value="Impact, Charcoal, Helvetica, Arial, sans-serif">Impact</option>
											<option value="'Lucida Grande', 'Lucida Sans Unicode', 'Lucida Sans', Lucida, Helvetica, Arial, sans-serif">Lucida Grande</option>
											<option value="Trebuchet MS, sans-serif">Trebuchet MS</option>
											<option value="Verdana, Helvetica, Arial, sans-serif">Verdana</option>
										</optgroup>
										<optgroup label="Serif">
											<option value="Garamond, Baskerville, Caslon, serif">Garamond</option>
											<option value="Georgia, Utopia, 'Times New Roman', Times, serif">Georgia</option>
											<option value="Palatino, 'Palatino Linotype', 'Book Antiqua', serif">Palatino</option>
											<option value="'Times New Roman', Times, serif">Times New Roman</option>
										</optgroup>
										<optgroup label="Monospace">
											<option value="'Courier New', Courier, monospace">Courier New</option>
											<option value="Monaco, 'Lucida Console', 'DejaVu Sans Mono', monospace">Monaco/Lucida Console</option>
										</optgroup>
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label" for="body-font-size">Font size</label>
								<div class="col-sm-9">
									<select name="" id="body-font-size">
										<option value="16px">16px</option>
										<option value="15px">15px</option>
										<option value="14px" selected="selected">14px</option>
										<option value="13px">13px</option>
										<option value="12px">12px</option>
										<option value="11px">11px</option>
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-3" for="body-line-height">Line Height</label>
								<div class="col-sm-9">
									<select name="theme_settings[current_values][body_line_height]" id="body_line_height">
										<option value="28px">28px</option>
										<option value="24px">24px</option>
										<option value="22px" selected="selected">22px</option>
										<option value="20px">20px</option>
										<option value="18px">18px</option>
										<option value="16px">16px</option>
									</select>
								</div>
							</div>
						</form>
						{# End base styles #}
						{# Begin navigation styles #}
						<h4>Navigation Styles</h4>
						<form class="form-horizontal" role="form">
							<div class="form-group">
								<label for="google-nav-font" class="control-label col-sm-3">Google webfonts navigation typeface</label>
								<div class="col-sm-9">
									<select name="google-nav-font" id="google-nav-font">
										<option value="none" selected="">-- None --</option>
										<option value="Abril+Fatface">Abril Fatface</option>
										<option value="Arvo">Arvo</option>
										<option value="Asap">Asap</option>
										<option value="Bevan">Bevan</option>
										<option value="Cabin">Cabin</option>
										<option value="Copse">Copse</option>
										<option value="Dancing+Script">Dancing Script</option>
										<option value="Droid+Sans">Droid Sans</option>
										<option value="Droid+Serif">Droid Serif</option>
										<option value="Gentium+Book+Basic">Gentium Book Basic</option>
										<option value="Gravitas+One">Gravitas One</option>
										<option value="Gruppo">Gruppo</option>
										<option value="Josefin+Slab">Josefin Slab</option>
										<option value="Josefin+Sans">Josefin Sans</option>
										<option value="Kreon">Kreon</option>
										<option value="Lato">Lato</option>
										<option value="Merriweather">Merriweather</option>
										<option value="Old+Standard+TT">Old Standard TT</option>
										<option value="Open+Sans">Open Sans</option>
										<option value="Vollkorn">Vollkorn</option>
									</select>
								</div>
							</div>
							<div class="form-group">
								<label for="nav-font-size" class="control-label col-sm-3">Navigation Font Size</label>
								<div class="col-sm-9">
									<select name="nav-font-size" id="nav-font-size">
										<option value="20px">20 px</option>
										<option value="19px">19 px</option>
										<option value="18px">18 px</option>
										<option value="17px">17 px</option>
										<option value="16px">16 px</option>
										<option value="15px">15 px</option>
										<option value="14px" selected="">14 px</option>
										<option value="13px">13 px</option>
										<option value="12px">12 px</option>
										<option value="11px">11 px</option>
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-3" for="nav-font-weight">Navigation font weight</label>
								<div class="col-sm-9">
									<select name="nav-font-weight" id="nav-font-weight">
										<option value="700">Bold</option>
										<option value="400" selected="">Regular</option>
										<option value="300">Light</option>
									</select>
